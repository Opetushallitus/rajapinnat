<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd
             http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
             
    <persistence-unit name="tarjontaKela" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/>
            <property name="hibernate.jdbc.batch_size" value="20" />
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="oph"/>
            <property name="hibernate.connection.password" value="oph"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://taulu.hard.ware.fi:5432/tarjonta"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="organisaatioKela" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/>
            <property name="hibernate.jdbc.batch_size" value="20" />
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="oph"/>
            <property name="hibernate.connection.password" value="oph"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://taulu.hard.ware.fi:5432/organisaatio"/>
        </properties>
    </persistence-unit>
</persistence>