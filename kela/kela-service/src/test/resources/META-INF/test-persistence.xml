<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd
             http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
             
    <persistence-unit name="tarjontaKela" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.Hakukohde</class>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.Koulutusmoduuli</class>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.KoulutusmoduuliToteutus</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.import_files" value="import-tarjonta.sql"/>
            
            <property name="hibernate.dialect" value="fi.vm.sade.rajapinnat.kela.testutil.ImprovedH2Dialect"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>

            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="organisaatioKela" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.Organisaatio</class>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.Organisaatiosuhde</class>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.Yhteystieto</class>
        <class>fi.vm.sade.rajapinnat.kela.tarjonta.model.MonikielinenTeksti</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>

            <property name="hibernate.dialect" value="fi.vm.sade.rajapinnat.kela.testutil.ImprovedH2Dialect"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>

            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>
        </properties>
    </persistence-unit>
</persistence>
